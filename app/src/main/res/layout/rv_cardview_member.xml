<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            app:cardBackgroundColor="@color/cardview_dark_background"
            app:cardCornerRadius="10sp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_profilePic"
                    android:layout_width="wrap_content"
                    android:layout_height="100sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/ic_launcher_foreground" />

                <ImageView
                    android:id="@+id/img_logo"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rounded_border"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_launcher_foreground" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:background="@android:color/holo_blue_dark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/img_profilePic"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/txt_fullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/rounded_border_colored"
                        android:text="Full name"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/txt_position"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_border_colored"
                        android:text="Position"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/txt_memberAge"
                        app:layout_constraintStart_toStartOf="@+id/txt_fullname"
                        app:layout_constraintTop_toBottomOf="@+id/txt_fullname" />

                    <TextView
                        android:id="@+id/txt_memberAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_border_colored"
                        android:text="Age"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/txt_memberConstituency"
                        app:layout_constraintStart_toStartOf="@+id/txt_position"
                        app:layout_constraintTop_toBottomOf="@+id/txt_position" />

                    <TextView
                        android:id="@+id/txt_memberConstituency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_border_colored"
                        android:text="Constituency"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/txt_memberAge"
                        app:layout_constraintTop_toBottomOf="@+id/txt_memberAge" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/txt_itemConstituency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/txt_itemAge"
                    app:layout_constraintTop_toBottomOf="@+id/txt_itemAge" />

                <TextView
                    android:id="@+id/txt_itemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="TextView"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/txt_itemPosition"
                    app:layout_constraintStart_toEndOf="@+id/linearLayout"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_itemPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/txt_itemAge"
                    app:layout_constraintStart_toStartOf="@+id/txt_itemName"
                    app:layout_constraintTop_toBottomOf="@+id/txt_itemName" />

                <TextView
                    android:id="@+id/txt_itemAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/txt_itemConstituency"
                    app:layout_constraintStart_toStartOf="@+id/txt_itemPosition"
                    app:layout_constraintTop_toBottomOf="@+id/txt_itemPosition" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>